# Required Environment Variables
# ==============================

# Finnhub API key for earnings calendar and market data
FINNHUB_API_KEY=

# Resend API key for newsletter delivery
RESEND_API_KEY=

# Google Gemini API key for AI analysis
GEMINI_API_KEY=

# Resend audience ID for newsletter subscribers
AUDIENCE_ID=

# Optional Environment Variables  
# ==============================

# Alpha Vantage API key (optional fallback)
ALPHA_VANTAGE_API_KEY=

# Email configuration
NEWSLETTER_FROM=newsletter@yourdom.com
NEWSLETTER_FROM_EMAIL=newsletter@yourdom.com
